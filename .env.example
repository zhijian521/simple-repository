# GitHub API 配置
# GitHub 个人访问令牌（需要 repo 权限）
# 获取方式：GitHub Settings -> Developer settings -> Personal access tokens -> Tokens (classic)
GITHUB_TOKEN=your_github_token_here

# GitHub 用户名或组织名称
GITHUB_OWNER=your_github_username_here

# GitHub 仓库名称
GITHUB_REPO=your_repository_name_here

# GitHub 分支名称（可选，默认为 main）
GITHUB_BRANCH=main

# 身份验证配置
# 登录用户名（用于前端登录）
AUTH_USERNAME=admin

# 登录密码（明文密码，仅用于测试环境，生产环境请使用哈希）
AUTH_PASSWORD=your_password_here

# JWT 密钥（用于生成和验证 token，建议使用随机字符串）
# 生成方式：crypto.randomBytes(32).toString('hex')
JWT_SECRET=your_jwt_secret_key_here

# Token 有效期（单位：天，默认为 7 天）
TOKEN_EXPIRY_DAYS=7
